@model IEnumerable<iCelerium.Models.EditAccountViewModel>
@{
    ViewBag.Title = iCelerium.Views.Strings.UserList;
}

<h3><i class="fa fa-users"></i>@ViewBag.Title</h3>
<hr />
<div class="row">
    <div class="panel panel-info">
        <div class="panel-heading">

        </div>
        <table class="table table-striped table-condensed table-roundcorners">
            <tr>
                <th> @Html.DisplayNameFor(model => model.FullName) </th>
                <th> @Html.DisplayNameFor(model => model.UserName) </th>
                <th> @Html.DisplayNameFor(model => model.Email) </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                    <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>
                        <a href='@Url.Action("Edit", "Account", new { id = item.Id })'> <i class="fa fa-edit fa-fw fa-2x"></i></a>
                    </td>
                </tr>
            }
        </table>
</div>
        @Html.ActionLink("Add new user", "Register", null, new { @class = "btn btn-primary" })
    </div>
