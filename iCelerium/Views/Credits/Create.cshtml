@using iCelerium.Models.BodyClasses;
@model CreateCreditTypeViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3><i class="fa fa-user"></i> @ViewBag.Title</h3>

<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">


        @Html.ValidationSummary(true)
        @Html.HiddenFor(model=>model.TypeID)
        <div class="form-group">
            @Html.LabelFor(model => model.TypeName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.TypeName, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TypeName)
            </div>
        </div>
        <div class="form-group ">
            @Html.LabelFor(model => model.EcheancesID, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("EcheancesID",null,"Echeances...", new { @class = "form-control dropdown" })
                @Html.ValidationMessageFor(model => model.EcheancesID)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.InterestRate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.InterestRate, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.InterestRate)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Duration, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Duration, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Duration)
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@iCelerium.Views.Strings.Save" class="btn btn-success" />
                @Html.ActionLink(@iCelerium.Views.Strings.Cancel, "Index", null, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}