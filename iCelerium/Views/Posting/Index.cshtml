@model IEnumerable<iCelerium.Models.spToBeValidated_Result>
@{
    ViewBag.Title = "Postings";
}

<h3>
    <i class="fa fa-tasks"></i> Validations
</h3>

<hr>
<div class="row">
    @using (Html.BeginForm("Index", "Posting", FormMethod.Post))
    {

        <div class="col-md-4">

            <div class="form-group">
                <div class="input-group ">
                    <span class="input-group-addon "><i class="fa fa-calendar bigger-110"></i></span>
                    @Html.TextBox("startDate", null, new { @class = "form-control date-picker Date" })

                </div>
            </div>

        </div>
        <div class="col-md-4">

            <div class="form-group">
                <div class="input-group ">
                    <span class="input-group-addon "><i class="fa fa-calendar bigger-110"></i></span>
                    @Html.TextBox("endDate", null, new { @class = "form-control date-picker Date2" })

                </div>
            </div>

        </div>
        <div class="col-md-4">
            <div class="form-group">
                <input type="submit" value="Go" class="btn btn-success" />
            </div>
        </div>
    }
</div>

<div class="row">
    <div class="panel panel-info">
        <div class="panel-heading">
            <h3 class="panel-title">
                Transactions non Poste
            </h3>
        </div>
        <div class="panel-body">

        </div>
        <table class="table table-striped table-hover">
            <thead style="font-weight:bold" class="alert-success">
                <tr>
                    <td>Nom Collecteur</td>
                    <td> Numero Collecteur</td>

                    <td>Nombre de transaction</td>
                    <td>Montant Nouveau membre</td>
                    <td>Montant des paiements</td>
                    <td>Montant des collectes</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    <tr data-href='@Url.Action("Edit", new { Id = item.AgentId })'>

                        <td style="text-transform:uppercase">@Html.DisplayFor(modelitem => item.AgentName)</td>
                        <td>@Html.DisplayFor(modelitem => item.AgentId)</td>

                        <td>@Html.DisplayFor(modelitem => item.NTrans)</td>
                        <td>@Html.DisplayFor(modelitem => item.SNouveauClient)</td>
                        <td>@Html.DisplayFor(modelitem => item.SPaiement)</td>
                        <td>@Html.DisplayFor(modelitem => item.SCollet)</td>
                        <td>
                            <a href='@Url.Action("Details", "Posting", new { agentId = item.AgentId, sDate = ViewBag.sDate, eDate = ViewBag.eDate })'>
                                <i class="fa fa-info-circle fa-fw fa-2x"></i>
                            </a>
                        </td>
                    </tr>

                }

            </tbody>
        </table>
    </div>

</div>

<link href="~/Content/themes/base/jquery.ui.all.css" rel="stylesheet" />
<link href="~/Content/Site.css" rel="stylesheet" />
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery-ui-1.10.4.min.js"></script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.10.4.min.js"></script>
}
