@model iCelerium.Models.EditClientsViewModel

@{
    ViewBag.Title = @Model.Name;
}

<h3><i class="fa fa-user"></i> @ViewBag.Title</h3>

<hr />
<div class="row">
    <div class="col-md-12 form-horizontal">
        <section id="loginForm">
            @using (Html.BeginForm(new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true)


                <div class="form-group">
                    @Html.LabelFor(model => model.ClientId, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.ClientId, new { @class = "form-control", @readonly = true })
                        @Html.ValidationMessageFor(model => model.ClientId)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @readonly = true })
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Sexe, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">

                        @Html.DropDownList("Sexes", null, new { @class = "form-control dropdown", @readonly = true })
                        @Html.ValidationMessageFor(model => model.Sexe)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.ClientTel, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.ClientTel, new { @class = "form-control", @readonly = true })
                        @Html.ValidationMessageFor(model => model.ClientTel)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.AgentName, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.AgentName, new { @class = "form-control", @readonly = true })
                        @Html.ValidationMessageFor(model => model.AgentName)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Mise, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.Mise, new { @class = "form-control", @readonly = true })
                        @Html.ValidationMessageFor(model => model.Mise)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Solde, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.Solde, new { @class = "form-control", @readonly = true })
                        @Html.ValidationMessageFor(model => model.Solde)
                    </div>
                </div>





                <div class="form-group">
                    <div class="col-md-offset-3 col-md-9">
                       
                        @Html.ActionLink(@iCelerium.Views.Strings.Cancel, "Index", null, new { @class = "btn btn-primary" })
                        @*@Html.ActionLink("Ajouter Credit", "contract", "Credits", new { clientID =Model.ClientId}, new { @class = "btn btn-success" })*@

                    </div>
                </div>

            }

        </section>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.10.4.min.js"></script>
    <script src="~/Scripts/jquery-ui.unobtrusive-2.2.0.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}
